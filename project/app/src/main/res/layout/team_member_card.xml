<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:id="@+id/memberList_cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/memberInfoCard"
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:text="Member name and Email : "
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/analyticsButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_baseline_analytics_24"
            android:layout_gravity="center|end"/>

        <ImageView
            android:id="@+id/deleteMember"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center|end"
            app:srcCompat="@android:drawable/ic_menu_delete" />


    </LinearLayout>


</androidx.cardview.widget.CardView>